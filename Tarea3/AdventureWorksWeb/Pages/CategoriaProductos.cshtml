@page
@using AdventureWorksNS.Data
@model AdventureWorksWeb.Pages.CategoriaProductosModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<div class="row">
    <h1 class="display-2">Categoria</h1>

    <div class="row">
        <p>Por favor ingrese un nueva Categoria</p>
        <form method="POST">
            <div>
                <div><input asp-for="Categoria.ParentProductCategoryId" placeholder="CategoriaID" /></div>
                <div><input asp-for="Categoria.Name" placeholder="Nombre" /></div>
                <div><input asp-for="Categoria.Rowguid" placeholder="Codigo" /></div>
                <div><input type="submit" /></div>
            </div>
        </form>
    </div>


<table class="table">
    <thead class="thead-inverse">
        <tr>
            <th>CategoriaID</th>
            <th>Nombre</th>
            <th>Codigo</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Categorias is not null)
        {
            @foreach(ProductCategory c in Model.Categorias)
            {
                <tr>
                    <td>@c.ParentProductCategoryId</td>
                    <td>@c.Name</td>
                    <td>@c.Rowguid</td>
                </tr>
            }
        }
    </tbody>
    
</table>

</div>
